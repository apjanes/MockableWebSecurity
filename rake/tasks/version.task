task :version do 
  require 'lib/version'
  require 'lib/assembly_info'
  
  if ENV['version'] then
    version = Version.new(ENV['version'])
    info = AssemblyInfo.new
    info.version = version.assembly_version
    info.file_version = version.file_version
    info.save
  else
    puts "WARNING: No version specified for version task."
  end
end